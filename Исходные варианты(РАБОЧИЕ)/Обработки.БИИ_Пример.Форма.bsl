&НаСервере
Функция GetNomenclatureList()
	Сообщить("[ОТЛАДКА] Начало выполнения функции GetNomenclatureList");
	
	запрос = новый запрос;
	запрос.Текст =
	"ВЫБРАТЬ
	|    Номенклатура.Наименование КАК Наименование
	|ИЗ
	|    Справочник.Номенклатура КАК Номенклатура";
	
	выб = запрос.Выполнить().Выбрать();
	списокНаименований = Новый Массив;
	
	Пока выб.Следующий() Цикл
		списокНаименований.Добавить(выб.Наименование);
	КонецЦикла;
	
	Сообщить("[ОТЛАДКА] Завершение функции GetNomenclatureList, найдено наименований: " + списокНаименований.Количество());
	Возврат списокНаименований;
КонецФункции

Функция GetPurchaseStatistics(параметры)
	Сообщить("[ОТЛАДКА] Начало выполнения функции GetPurchaseStatistics");
	
	ЧтениеJSON = Новый ЧтениеJSON;
	ЧтениеJSON.УстановитьСтроку(параметры);    
	данные = ПрочитатьJSON(ЧтениеJSON);
	ЧтениеJSON.Закрыть();
	
	запрос = новый запрос;
	запрос.Текст =
	"ВЫБРАТЬ
	|    ЗакупкиОбороты.АналитикаУчетаНоменклатуры.Номенклатура.Наименование КАК Номенклатура,
	|    ЗакупкиОбороты.Контрагент.Наименование КАК Поставщик,
	|    Год(ЗакупкиОбороты.Период) КАК Год,
	|    Месяц(ЗакупкиОбороты.Период) КАК Месяц,
	|    ЗакупкиОбороты.КоличествоОборот КАК Количество,
	|    ЗакупкиОбороты.СуммаОборот КАК Сумма,
	|    ЗакупкиОбороты.СуммаОборот / 
	|    ВЫБОР 
	|        КОГДА ЗакупкиОбороты.КоличествоОборот = 0 ТОГДА 1 
	|        ИНАЧЕ ЗакупкиОбороты.КоличествоОборот 
	|    КОНЕЦ КАК СредняяЦена
	|ИЗ
	|    РегистрНакопления.Закупки.Обороты(
	|        &НачалоПериода,
	|        &КонецПериода,
	|        Месяц,
	|        ) КАК ЗакупкиОбороты
	|ГДЕ
	|    ЗакупкиОбороты.КоличествоОборот > 0
	|СГРУППИРОВАТЬ ПО
	|    ЗакупкиОбороты.АналитикаУчетаНоменклатуры.Номенклатура.Наименование,
	|    ЗакупкиОбороты.Контрагент.Наименование,
	|    Год(ЗакупкиОбороты.Период),
	|    Месяц(ЗакупкиОбороты.Период),
	|    ЗакупкиОбороты.КоличествоОборот,
	|    ЗакупкиОбороты.СуммаОборот
	|УПОРЯДОЧИТЬ ПО
	|    Год,
	|    Месяц,
	|    Поставщик,
	|    Номенклатура";
	
	запрос.УстановитьПараметр("НачалоПериода", ПреобразоватьВДата(данные.StartDate));
	запрос.УстановитьПараметр("КонецПериода", ПреобразоватьВДата(данные.EndDate));
	
	Сообщить("[ОТЛАДКА] Параметры запроса установлены: НачалоПериода=" + данные.StartDate + ", КонецПериода=" + данные.EndDate);
	
	результат = запрос.Выполнить();
	выборка = результат.Выбрать();
	
	статистика = Новый Массив;
	
	Пока выборка.Следующий() Цикл
		строкаСтатистики = Новый Структура;
		строкаСтатистики.Вставить("Номенклатура", выборка.Номенклатура);
		строкаСтатистики.Вставить("Поставщик", выборка.Поставщик);
		строкаСтатистики.Вставить("Год", выборка.Год);
		строкаСтатистики.Вставить("Месяц", выборка.Месяц);
		строкаСтатистики.Вставить("Количество", выборка.Количество);
		строкаСтатистики.Вставить("Сумма", выборка.Сумма);
		строкаСтатистики.Вставить("СредняяЦена", выборка.СредняяЦена);
		
		статистика.Добавить(строкаСтатистики);
	КонецЦикла;
	
	ЗаписьJSON = Новый ЗаписьJSON;
	ЗаписьJSON.УстановитьСтроку();
	ЗаписатьJSON(ЗаписьJSON, статистика);
	результатJSON = ЗаписьJSON.Закрыть();
	
	Сообщить("[ОТЛАДКА] Завершение функции GetPurchaseStatistics, найдено записей: " + статистика.Количество());
	
	Возврат результатJSON;
КонецФункции

